<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>loginChef</servlet-name>
        <servlet-class>servlet.loginChef</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginProfesseur</servlet-name>
        <servlet-class>servlet.loginProfesseur</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginDirection</servlet-name>
        <servlet-class>servlet.loginDirection</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginUtilisateur</servlet-name>
        <servlet-class>servlet.loginUtilisateur</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>liste</servlet-name>
        <servlet-class>servlet.liste</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginChef</servlet-name>
        <url-pattern>/loginChef</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginProfesseur</servlet-name>
        <url-pattern>/loginProfesseur</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginDirection</servlet-name>
        <url-pattern>/loginDirection</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginUtilisateur</servlet-name>
        <url-pattern>/loginUtilisateur</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>liste</servlet-name>
        <url-pattern>/liste</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
